{
  "name": "footballmanager/online-game",
  "description": "Online Football Manager Game",
  "type": "project",
  "license": "proprietary",
  "require": {
    "php": "^8.4",
    "ext-pdo": "*",
    "ext-mbstring": "*"
  },
  "require-dev": {
    "phpunit/phpunit": "^11.0"
  },
  "autoload": {
    "psr-4": {
      "Framework\\": "framework/",
      "Registration\\": "src/Registration/",
      "User\\": "src/User/",
      "Team\\": "src/Team/",
      "Player\\": "src/Player/",
      "League\\": "src/League/"
    }
  },
  "config": {
    "optimize-autoloader": true,
    "prefer-stable": true,
    "sort-packages": true
  },
  "minimum-stability": "stable",
  "scripts": {
    "install-db": "php bin/install-database.php",
    "check-db": "php bin/check-database.php",
    "test": "phpunit",
    "serve": "php -S localhost:8000 -t public/"
  }
}